precondition:
	@if [ -e Build/x86-linux/App/MARTeApp.ex ]; then make -f Makefile.x86-linux clean; fi
	@if [ -e Test/GTest/cov/MainGTest.ex ]; then make -f Makefile.cov clean; fi
	mkdir -p $(BUILD_DIR)
	mkdir -p $(BUILD_DIR)/{BUILD,BUILDROOT,RPMS,SOURCES,SPECS,SRPMS}


$(BUILD_DIR)/SOURCES/$(RPM_NAME)-$(BUILD_OPT)-$(RPM_VERSION).tar.gz: $(OBJS) precondition
	mkdir -p $(RPM_NAME)-$(BUILD_OPT)-$(RPM_VERSION)
	cp -rfa $(OBJS) $(RPM_NAME)-$(BUILD_OPT)-$(RPM_VERSION)
	tar -cvzf $@ $(RPM_NAME)-$(BUILD_OPT)-$(RPM_VERSION)
	rm -rf $(RPM_NAME)-$(BUILD_OPT)-$(RPM_VERSION)

$(BUILD_DIR)/RPMS/$(RPM_NAME)-$(BUILD_OPT)-$(RPM_VERSION).rpm : $(BUILD_DIR)/SOURCES/$(RPM_NAME)-$(BUILD_OPT)-$(RPM_VERSION).tar.gz
	cp -rfa $(ROOT_DIR)/Resources/RPM/${SPEC_FILE} $(BUILD_DIR)/SPECS/$(SPEC_FILE)
	rpmbuild --define "_topdir $(PWD)/$(BUILD_DIR)" --define "rpm_name $(RPM_NAME)-$(BUILD_OPT)" --define "rpm_version $(RPM_VERSION)" --define "rpm_release $(RPM_RELEASE)" --define "rpm_inst_dir $(RPM_INST_DIR)" --define "rpm_sys_conf_dir $(RPM_SYS_CONF_DIR)" --define "rpm_requires $(RPM_REQUIRES)" --define "rpm_build_requires $(RPM_BUILD_REQUIRES)" --define "rpm_build_options $(BUILD_OPT)" $(RPM_FLAGS) $(BUILD_DIR)/SPECS/$(SPEC_FILE)

%.spb : 
	$(MAKE) -C $* -f Makefile.$(TARGET) 

%.spc : 
	$(MAKE) -C $* -f Makefile.$(TARGET) clean


clean:  $(SUBPROJC)
	@rm -rf $(BUILD_DIR)/*

